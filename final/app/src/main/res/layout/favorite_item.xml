<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_poster"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />

            <TextView
                android:id="@+id/tv_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_poster"
                android:text="The Litle Mermaid"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/tv_tahun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2023"
                android:layout_below="@id/tv_judul"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/iv_poster"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:id="@+id/iv_label"
                android:layout_width="40dp"
                android:layout_height="30dp"
                app:color="@color/purple_700"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_movie_24h"
                android:layout_below="@id/tv_tahun"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>